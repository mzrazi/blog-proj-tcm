<div class="container">
        <div class="col-md-12">
     <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>title</th>
      <th>topic</th>
      <th>author</th>
      <th>content</th>
      <th>approve</th>
      <th>reject</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each articles}}
      <tr>
        <td>{{title}} </td>
        <td>{{topic}}</td>
        <td>{{author}}</td>
        <td>{{content}}</td>
        {{#if approved}}
        <td>approved</td>
        {{else}}
        <td><a class="btn btn-success" href="/manager/approve-article/{{_id}}">approve</a></td>
        {{/if}}
        <td><a class="btn btn-danger" onclick="confirm("do you really want to delete?")" href="/manager/reject-article/{{_id}}">reject</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>

</div>